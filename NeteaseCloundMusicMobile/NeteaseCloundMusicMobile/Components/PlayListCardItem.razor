<Card class="cursor-pointer">
    <CardImage class="@Size.Full">
        <Image>
            
            <div style="background-image:url(@PicUrl)" class="card-back ">
                <div class="@B.PR2   @B.TextWhite  w-100">
                    <Level IsMobile="true">
                        <LevelLeft></LevelLeft>
                        <LevelRight>
                            <IconText>
                                <Icon IconClass="@CountIconClass"></Icon>
                                <span>@Count.ToCountString()</span>
                            </IconText>

                        </LevelRight>
                    </Level>
                </div>
            </div>
        </Image>
    </CardImage>
    <CardFooter  >
        <div class="@B.PT1 @B.PR2 w-100"  >
            <div class="@B.TextLeft    @B.TextDark @B.TextWeightBold   text-truncate">@FooterTitle</div>
            <div class="@B.TextLeft text-truncate text-secondary">@FooterDescription</div>
        </div>
    </CardFooter>
</Card>