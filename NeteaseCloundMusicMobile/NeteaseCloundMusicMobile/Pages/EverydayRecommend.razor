@page "/everydayrecommend"
@inherits RazorComponentBase
@if (_dailySongs != null)
{
    <div class="m-4">
        <div>
            <div class="columns align-items-center">
                <div class="column is-hidden-mobile is-narrow">
                    <div class="date-box">
                        <div class="@B.Join(B.TextCentered, B.MT1, B.MR1) count-desc">@DateTime.Today.DayOfWeek</div>
                        <p class="date">

                            @DateTime.Today.Day

                        </p>
                    </div>
                </div>
                <div class="column">
                    <div>
                        <Level class="mb-2" IsMobile="true">
                            <LevelLeft>
                                <Tag IsLight Color="Color.Danger">歌单</Tag>
                            </LevelLeft>
                            <LevelItem class="@B.Join(B.JustifyContentLeft, B.PR2, "text-nowrap", "overflow-hidden", "text-overflow-ellipsis")">
                                <Subtitle>每日歌曲推荐</Subtitle>
                            </LevelItem>

                        </Level>

                        <div class="mb-2 d-flex align-items-center flex-wrap ">
                            <Button class="mr-4" IsSmall="true" Color="Color.Danger" @onclick="PlayAllAsync">
                                <Icon IconClass="fa fa-play-circle-o"></Icon>
                                <span>播放全部</span>
                            </Button>

                            <Button class="mr-4" IsSmall="true">
                                <Icon IconClass="iconfont icon-folder-add"></Icon>
                                <span>收藏全部</span>
                            </Button>
                        </div>
                        <div class="mb-2 d-flex count-desc ">
                            <div>
                                <div class="text-wrap">
                                    <Icon IconClass="fa fa-lightbulb-o"></Icon><span>根据你的音乐口味生成，每日6:00更新</span>
                                </div>
                            </div>


                        </div>

                    </div>
                </div>
            </div>

        </div>

        <div class="mt-4">

            <NeteaseCloundMusicMobile.Client.Components.PlaylistVirtualize @ref="_playlistTable"
                                                                       EnableSearch="true"
                                                                       Tracks="_dailySongs">

            </NeteaseCloundMusicMobile.Client.Components.PlaylistVirtualize>
        </div>
    </div>
}
<Loading IsActive="_dailySongs==null"></Loading>
